<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
 http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">
 
   <persistence-unit name="persistant">
     <description>My Persistence Unit</description>
     <provider>com.objectdb.jpa.Provider</provider>
     <class>fr.istic.taa.yeoman.Cardio</class>
     <class>fr.istic.taa.yeoman.Meteo</class>
     <class>fr.istic.taa.yeoman.Parcours</class>
     <class>fr.istic.taa.yeoman.PointGPS</class>
     <class>fr.istic.taa.yeoman.Seance</class>
     <class>fr.istic.taa.yeoman.Sport</class>
     <class>fr.istic.taa.yeoman.Utilisateur</class>
     <properties>
      <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:bddSport"/>
      <property name="javax.persistence.jdbc.user" value="sa"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>
</persistence-unit>
 
</persistence>